{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/shared/*": [
        "src/contexts/shared/*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
