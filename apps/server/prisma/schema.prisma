generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String
  role      Role        @default(USER)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  sessions  Session[]
  tokens    Token[]
  purchases Purchases[]

  @@map("users")
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  ip        String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Token {
  id            Int    @id @default(autoincrement())
  name          String
  symbol        String
  initialSupply Int
  tokenId       String
  ownerId       Int
  owner         User   @relation(fields: [ownerId], references: [id])

  @@map("tokens")
}

enum Role {
  ADMIN
  USER
}

model Purchases {
  id            Int      @id @default(autoincrement())
  user_id       Int
  purchase_time DateTime @default(now()) @db.Timestamptz(6)
  user          User     @relation(fields: [user_id], references: [id])

  @@map("purchases")
}
